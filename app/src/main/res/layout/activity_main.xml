<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- State UI - Account Users -->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/compdash_image_users"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <LinearLayout
                    android:layout_marginStart="8dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Halo, Selamat Datang!"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="@color/color1"
                        android:fontFamily="@font/work_sans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="loremipsum@gmail.com"
                        android:fontFamily="@font/raleway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:src="@drawable/compdash_icon_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <!-- State UI - Text & Full CardView -->
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/work_sans"
                android:text="Tidak ada yang instan, yuk\n#MulaiBerproses dengan kita!"
                android:textColor="@color/color2"
                android:lines="2"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <include
                layout="@layout/compdash_layout_full"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- State UI - Show Categories -->
            <TextView
                android:layout_marginTop="16dp"
                android:fontFamily="@font/work_sans"
                android:text="Kategori Favorit"
                android:textColor="@color/color1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:background="@drawable/compdash_color_unselected_category"
                    android:layout_margin="4dp"
                    android:text="Flutter"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/work_sans"
                    android:textAllCaps="true"
                    android:textColor="@color/color4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

                <TextView
                    android:gravity="center"
                    android:background="@drawable/compdash_color_selected_category"
                    android:layout_margin="4dp"
                    android:text="React"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/work_sans"
                    android:textAllCaps="true"
                    android:textColor="@color/color1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

                <TextView
                    android:gravity="center"
                    android:background="@drawable/compdash_color_selected_category"
                    android:layout_margin="4dp"
                    android:text="Kotlin"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/work_sans"
                    android:textAllCaps="true"
                    android:textColor="@color/color1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <!-- State UI - Menu CardView Categories -->
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/compdash_layout_dark"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <include
                    layout="@layout/compdash_layout_light"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/compdash_layout_light"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <include
                    layout="@layout/compdash_layout_dark"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/compdash_layout_dark"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <include
                    layout="@layout/compdash_layout_light"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/compdash_layout_light"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <include
                    layout="@layout/compdash_layout_dark"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- State UI - Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/compdash_navbottom_background"
        android:elevation="24dp"
        app:itemIconTint="@drawable/compdash_navbottom_selected"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/compdash_bottom_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>